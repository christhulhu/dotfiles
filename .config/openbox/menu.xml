<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

	<menu id="organization-menu" label="Organization">
		<item label="TickTick">
			<action name="Execute">
				<command>gtk-launch TickTick</command>
			</action>
		</item>
		<item label="Google Calendar">
			<action name="Execute">
				<command>gtk-launch Google\ Calendar</command>
			</action>
		</item>
		<item label="Notion">
			<action name="Execute">
				<command>notion-snap</command>
			</action>
		</item>
		<item label="Google Drive">
			<action name="Execute">
				<command>gtk-launch GDrive</command>
			</action>
		</item>
		<item label="Google Photos">
			<action name="Execute">
				<command>gtk-launch Google\ Photos</command>
			</action>
		</item>
	</menu>

	<menu id="communication-menu" label="Communication">
		<item label="Gmail">
			<action name="Execute">
				<command>gtk-launch GMail</command>
			</action>
		</item>
		<item label="WhatsApp">
			<action name="Execute">
				<command>gtk-launch WhatsApp</command>
			</action>
		</item>
		<item label="Telegram">
			<action name="Execute">
				<command>telegram-desktop</command>
			</action>
		</item>
		<item label="Signal">
			<action name="Execute">
				<command>signal-desktop</command>
			</action>
		</item>
	</menu>

	<menu id="work-menu" label="Work">
		<item label="Outlook">
			<action name="Execute">
				<command>gtk-launch Outlook</command>
			</action>
		</item>
		<item label="Mattermost">
			<action name="Execute">
				<command>gtk-launch Mattermost</command>
			</action>
		</item>
		<item label="Microsoft Teams">
			<action name="Execute">
				<command>teams</command>
			</action>
		</item>
		<separator/>
		<item label="Idea">
			<action name="Execute">
				<command>gtk-launch jetbrains-idea</command>
			</action>
		</item>
		<item label="VS Code">
			<action name="Execute">
				<command>code</command>
			</action>
		</item>
	</menu>

	<menu id="app-menu" label="Applications">
		<item label="Files">
			<action name="Execute">
				<command>nautilus</command>
			</action>
		</item>
		<item label="Editor">
			<action name="Execute">
				<command>gedit</command>
			</action>
		</item>
		<separator/>
		<item label="Gimp">
			<action name="Execute">
				<command>gimp</command>
			</action>
		</item>
		<separator/>
		<item label="Filezilla">
			<action name="Execute">
				<command>filezilla</command>
			</action>
		</item>
		<separator/>
		<item label="Calibre">
			<action name="Execute">
				<command>calibre</command>
			</action>
		</item>
		<separator/>
		<item label="LibreOffice Writer">
			<action name="Execute">
				<command>oowriter</command>
			</action>
		</item>
		<item label="LibreOffice Calc">
			<action name="Execute">
				<command>oocalc</command>
			</action>
		</item>
		<item label="LibreOffice Impress">
			<action name="Execute">
				<command>ooimpress</command>
			</action>
		</item>
		<separator />
		<item label="DeadBeaf">
			<action name="Execute">
				<command>deadbeef</command>
			</action>
		</item>
		<item label="Spotify">
			<action name="Execute">
				<command>spotify</command>
			</action>
		</item>
		<item label="TuxGuitar">
			<action name="Execute">
				<command>tuxguitar</command>
			</action>
		</item>
	</menu>

	<menu id="preferences-menu" label="Preferences">
		<item label="Openbox Config">
			<action name="Execute">
				<command>obconf</command>
			</action>
		</item>
		<item label="Tint2 Config">
			<action name="Execute">
				<command>tint2config</command>
			</action>
		</item>
		<item label="Gnome Control Center">
			<action name="Execute">
				<command>gnome-controll-center</command>
			</action>
		</item>
		<item label="Gnome Tweaks">
			<action name="Execute">
				<command>gnome-tweaks</command>
			</action>
		</item>
	</menu>

	<menu id="exit-menu" label="Exit">
		<item label="Log Out">
			<action name="SessionLogout">
				<prompt>Logout?</prompt>
			</action>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<prompt>Shutdown?</prompt>
				<command>systemctl poweroff</command>
			</action>
		</item>
		<item label="Reboot">
			<action name="Execute">
				<prompt>Reboot?</prompt>
				<command>systemctl reboot</command>
			</action>
		</item>
		<item label="Suspend">
			<action name="Execute">
				<command>systemctl suspend</command>
			</action>
		</item>
		<item label="Hibernate">
			<action name="Execute">
				<command>systemctl hibernate</command>
			</action>
		</item>
	</menu>

	<menu id="root-menu" label="Openbox 3">
		<separator label="Chris' OpenBox"/>
		<item label="Terminal">
			<action name="Execute">
				<command>kitty</command>
			</action>
		</item>
		<item label="Google Chrome">
			<action name="Execute">
				<command>gtk-launch google-chrome</command>
			</action>
		</item>
		<separator/>
		<menu id="organization-menu"/>
		<menu id="communication-menu"/>
		<menu id="work-menu" />
		<menu id="app-menu" />
		<separator/>
		<item label="Reconfigure">
			<action name="Reconfigure" />
		</item>

		<separator/>

		<menu id="exit-menu" />
	</item>

</menu>

</openbox_menu>
